<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_register"
    tools:context=".Login_Activity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/border_design"
        android:padding="10dp"
        android:src="@drawable/a_logo" />

    <EditText
        android:id="@+id/login_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@mipmap/email_icon_form"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp" />

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="208dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@mipmap/password_icon_form"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp" />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="286dp"
        android:background="@drawable/border_design"
        android:fontFamily="casual"
        android:text="login"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/login_register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="352dp"
        android:fontFamily="casual"
        android:padding="5dp"
        android:text="need an account ? Register now "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="393dp"
        android:fontFamily="casual"
        android:padding="5dp"
        android:text="OR"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="422dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/face_logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:src="@drawable/face2_icon" />

        <ImageView

            android:id="@+id/twit_logo"
            android:layout_width="104dp"
            android:layout_height="89dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:src="@drawable/twitter2_icon" />

        <ImageView

            android:id="@+id/gmail_logo"
            android:layout_width="88dp"
            android:layout_height="73dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:src="@drawable/gmail3_icon" />


    </LinearLayout>


</RelativeLayout>