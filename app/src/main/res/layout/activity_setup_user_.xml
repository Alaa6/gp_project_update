<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".setup_user_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_user_pp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:src="@drawable/profile_icon" />

    <EditText
        android:id="@+id/setup_user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@mipmap/username_icon_form"
        android:ems="10"
        android:hint="username"
        android:padding="2dp" />

    <EditText
        android:id="@+id/setup_user_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="307dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@mipmap/fullname_icon_form"
        android:ems="10"
        android:hint="fullname"
        android:padding="2dp" />

    <EditText
        android:id="@+id/setup_user_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="377dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@mipmap/address_icon_form"
        android:ems="10"
        android:hint="Address"
        android:padding="2dp" />


    <Button
        android:id="@+id/setup_user_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:background="@drawable/btn_style"
        android:drawableLeft="@mipmap/location2_icon_form"
        android:ems="10"
        android:gravity="center"
        android:hint="Get location"
        android:padding="2dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/setup_user_save_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="505dp"
        android:background="@drawable/btn_style"
        android:ems="10"
        android:gravity="center"
        android:hint="save"
        android:layout_marginLeft="100dp"
        android:padding="2dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>